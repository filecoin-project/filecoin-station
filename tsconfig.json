{
  /* Visit https://aka.ms/tsconfig.json to read more about this file */
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["es2021"],
    "target": "es2021",
    "module": "ES2022",
    "moduleResolution": "node",

    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.d.ts",
    "main/**/*.js",
    "build/**/*.js",
    "test/**/*.js",
    "vite.config.mjs", "main/main.js", "main/index.js", "build/notarize-macos.cjs", "main/electron.cjs",
  ]
}
